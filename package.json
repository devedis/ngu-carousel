{
  "name": "@ngu/carousel",
  "version": "1.4.8",
  "description": "Angular Universal carousel",
  "scripts": {
    "transpile": "ngc ",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/ngucarousel.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ngucarousel.umd.min.js",
    "build": "rimraf dist/ && npm run transpile && npm run package && npm run minify && copyfiles package.dist.json dist/"
  },
  "devDependencies": {
    "@angular/common": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "hammerjs": "^2.0.8",
    "rxjs": "^5.5.2",
    "@angular/compiler": "^4.2.4",
    "@angular/compiler-cli": "^4.2.4",
    "@types/hammerjs": "^2.0.35",
    "codelyzer": "^4.4.2",
    "copyfiles": "^2.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.43.0",
    "tslint": "^5.11.0",
    "typescript": "^2.3.4",
    "uglify-js": "^3.0.19"
  },
  "peerDependencies": {
    "@angular/common": ">=4.0.0",
    "@angular/core": ">=4.0.0",
    "@angular/platform-browser": ">=4.0.0",
    "hammerjs": ">=2.0.8",
    "rxjs": ">=5.5.2"
  }
}
